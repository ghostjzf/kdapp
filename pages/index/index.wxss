/**index.wxss**/
page {
  background-color: #f8f8f8;  
}

.home {
  background-color: #f8f8f8;
}

.home-bg {
  width: 100%;
}

.home-nav {
  position: relative;
}

.home-nav::before{
  position: absolute;
  content: " ";
  display: block;
  width: 10px;
  height: 100%;
  background-color: #f8f8f8;
  left: calc(100vw/3);
  transform: translateX(-50%);
}

.home-nav::after{
  position: absolute;
  content: " ";
  display: block;
  width: 10px;
  height: 100%;
  background-color: #f8f8f8;
  left: calc(200vw/3);
  transform: translateX(-50%);
}

.home-nav-item {
  width: calc(100vw/3);
  text-align: center;
  height: calc(100vw/3);
  margin-bottom: 10px;
  background-color: #fff;
  font-size: 30rpx;
}

.desc {
  color: #999999;
  font-size: 24rpx;
}